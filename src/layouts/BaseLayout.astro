---
/**
 * BaseLayout - 和モダンデザイン
 * 小田井窯ウェブサイト基本レイアウト
 */
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
  title: string;
  description?: string;
}

const { title, description = '美濃焼の伝統を受け継ぐ小田井窯。岐阜県多治見市より、南欧風オリジナル陶器と徳利・盃をお届けします。' } = Astro.props;
---

<!doctype html>
<html lang="ja">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | 美濃焼 小田井窯</title>
  </head>
  <body class="min-h-screen flex flex-col">
    <Header />
    <main class="flex-grow">
      <slot />
    </main>
    <Footer />

    <!-- GSAP 初期化スクリプト -->
    <script>
      import { gsap, ScrollTrigger, prefersReducedMotion } from '../utils/animations';

      // アニメーション準備完了イベントを発火
      document.addEventListener('DOMContentLoaded', () => {
        if (!prefersReducedMotion()) {
          window.dispatchEvent(new CustomEvent('gsap:ready'));
        }
      });

      // Astro ページ遷移時に ScrollTrigger をリフレッシュ
      document.addEventListener('astro:page-load', () => {
        ScrollTrigger.refresh();
      });
    </script>
  </body>
</html>
