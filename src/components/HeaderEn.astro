---
/**
 * Header コンポーネント（英語版）
 * 固定ヘッダー、スクロール時の影、ホバーアンダーライン
 */
const navItems = [
  { href: '/en/', label: 'Home' },
  { href: '/en/about/', label: 'About' },
  { href: '/en/products/', label: 'Products' },
  { href: '/en/custom/', label: 'Custom Orders' },
  { href: '/en/contact/', label: 'Contact' },
];
---

<header
  class="fixed top-0 left-0 right-0 z-50 bg-kinari/95 backdrop-blur-sm border-b border-sumi/10 transition-all duration-400"
  id="main-header"
>
  <div class="container-ma py-5">
    <div class="flex items-center justify-between">
      <!-- ロゴ -->
      <a href="/en/" class="flex items-center gap-4 group">
        <div class="text-ai">
          <h1 class="font-serif text-xl md:text-2xl font-medium tracking-wider">
            Otai Ceramics
          </h1>
          <p class="text-xs text-sumi/60 tracking-widest">
            小田井窯
          </p>
        </div>
      </a>

      <!-- デスクトップナビゲーション -->
      <nav class="hidden md:flex items-center gap-8">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="nav-link font-serif text-sumi hover:text-ai transition-colors duration-300 relative py-2"
          >
            {item.label}
            <span class="nav-underline absolute bottom-0 left-0 w-full h-0.5 bg-ai scale-x-0 origin-left transition-transform duration-300"></span>
          </a>
        ))}
        <!-- 言語切り替え -->
        <a
          href="/"
          class="ml-4 px-3 py-1 text-sm border border-ai text-ai rounded hover:bg-ai hover:text-hakuji transition-colors"
        >
          日本語
        </a>
      </nav>

      <!-- モバイルメニューボタン -->
      <button
        id="menu-toggle-en"
        class="md:hidden p-2 text-sumi hover:text-ai transition-colors"
        aria-label="Open menu"
        aria-expanded="false"
      >
        <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
          <path
            stroke-linecap="round"
            stroke-linejoin="round"
            stroke-width="1.5"
            d="M4 6h16M4 12h16M4 18h16"
          />
        </svg>
      </button>
    </div>

    <!-- モバイルナビゲーション -->
    <nav
      id="mobile-menu-en"
      class="hidden md:hidden mt-6 pb-6 border-t border-sumi/10 pt-6"
    >
      <div class="flex flex-col gap-5">
        {navItems.map((item) => (
          <a
            href={item.href}
            class="font-serif text-lg text-sumi hover:text-ai transition-colors"
          >
            {item.label}
          </a>
        ))}
        <a
          href="/"
          class="font-serif text-lg text-ai"
        >
          日本語版へ
        </a>
      </div>
    </nav>
  </div>
</header>

<!-- ヘッダー分のスペーサー -->
<div class="h-20"></div>

<script>
  // モバイルメニュートグル
  const menuToggle = document.getElementById('menu-toggle-en');
  const mobileMenu = document.getElementById('mobile-menu-en');

  menuToggle?.addEventListener('click', () => {
    const isExpanded = mobileMenu?.classList.toggle('hidden') === false;
    menuToggle.setAttribute('aria-expanded', String(isExpanded));
  });

  // スクロール時のヘッダー挙動
  const header = document.getElementById('main-header');
  let lastScroll = 0;

  window.addEventListener('scroll', () => {
    const currentScroll = window.scrollY;

    if (currentScroll > 100) {
      header?.classList.add('shadow-sm');
    } else {
      header?.classList.remove('shadow-sm');
    }

    lastScroll = currentScroll;
  });
</script>

<style>
  .nav-link:hover .nav-underline {
    transform: scaleX(1);
  }
</style>
