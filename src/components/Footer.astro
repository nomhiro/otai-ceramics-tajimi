---
/**
 * Footer コンポーネント - 和モダンデザイン
 * 和紙テクスチャ、新カラーパレット適用
 */
const currentYear = new Date().getFullYear();
---

<footer class="bg-ai text-hakuji mt-24 washi-texture">
  <div class="container-ma py-16 md:py-20">
    <div class="grid md:grid-cols-3 gap-12 md:gap-16">
      <!-- 会社情報 -->
      <div>
        <h3 class="font-serif text-2xl mb-6 tracking-wider">株式会社小田井商店</h3>
        <address class="not-italic text-sm leading-loose text-hakuji/80 space-y-1">
          <p>〒507-0828</p>
          <p>岐阜県多治見市三笠町2-10</p>
          <p class="mt-4">TEL: 0572-22-2161</p>
          <p>FAX: 0572-22-2163</p>
        </address>
      </div>

      <!-- 営業時間 -->
      <div>
        <h3 class="font-serif text-2xl mb-6 tracking-wider">営業時間</h3>
        <p class="text-sm text-hakuji/80 leading-loose">
          月曜日〜金曜日<br />
          午前8時〜午後5時
        </p>
        <p class="text-xs text-hakuji/60 mt-4">
          ※土日祝祭日休業
        </p>
      </div>

      <!-- リンク -->
      <div>
        <h3 class="font-serif text-2xl mb-6 tracking-wider">リンク</h3>
        <ul class="space-y-3 text-sm">
          <li>
            <a
              href="/about/"
              class="text-hakuji/80 hover:text-hakuji transition-colors duration-300"
            >
              小田井窯について
            </a>
          </li>
          <li>
            <a
              href="/products/"
              class="text-hakuji/80 hover:text-hakuji transition-colors duration-300"
            >
              商品一覧
            </a>
          </li>
          <li>
            <a
              href="/custom/"
              class="text-hakuji/80 hover:text-hakuji transition-colors duration-300"
            >
              オリジナル制作
            </a>
          </li>
          <li>
            <a
              href="/contact/"
              class="text-hakuji/80 hover:text-hakuji transition-colors duration-300"
            >
              お問い合わせ
            </a>
          </li>
        </ul>
      </div>
    </div>

    <!-- 区切り線 -->
    <div class="my-12 flex justify-center">
      <div class="w-24 h-0.5 bg-hakuji/20 rounded-full"></div>
    </div>

    <!-- コピーライト -->
    <div class="text-center text-sm text-hakuji/60">
      <p>&copy; 1949-{currentYear} 株式会社小田井商店</p>
      <p class="mt-2 text-xs tracking-wider">美濃焼の伝統を守り続けて</p>
    </div>
  </div>
</footer>
