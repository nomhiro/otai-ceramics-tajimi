---
/**
 * SectionTitle コンポーネント - 和モダンデザイン
 * 統一されたセクションタイトル（筆アンダーライン付き）
 */
interface Props {
  title: string;
  subtitle?: string;
  align?: 'left' | 'center';
  class?: string;
}

const { title, subtitle, align = 'center', class: className = '' } = Astro.props;
---

<div class={`section-header mb-16 ${align === 'center' ? 'text-center' : ''} ${className}`}>
  <h2 class="font-serif text-2xl md:text-3xl lg:text-4xl text-ai tracking-wider">
    <span class="brush-underline">{title}</span>
  </h2>
  {subtitle && (
    <p class="mt-4 text-sumi/70 text-lg">
      {subtitle}
    </p>
  )}
</div>
